CC=@CC@ -O2 -Wall -mwindows
RC=@RC@
ZIP=@ZIP@
TAR=@TAR@
CP=cp
RM=rm -f
MKDIR=mkdir -p

TARGET=haisyo
LIBS=-luser32 -lgdi32 -lole32 -lshell32 -luuid
PACKAGE=@PACKAGE_NAME@-@PACKAGE_VERSION@
ARCHIVE=$(PACKAGE).tar.gz

.PHONY: all build run dist clean upload

all: build

build: $(TARGET)@EXEEXT@ hook.dll

run: build
	cygstart ./$(TARGET)@EXEEXT@

clean:
	$(RM) *.obj *.dll *.res *.RES *.exp *.lib *.log *.zip *.tar.gz *.@OBJEXT@ *@EXEEXT@
	$(RM) -r $(PACKAGE) 

c.@OBJEXT@: Makefile 
	$(CC) -c $< -o $@

hook.dll: hook.@OBJEXT@
	$(CC) -shared -o $@ $< $(LIBS)

$(TARGET).res.@OBJEXT@: $(TARGET).rc
	$(RC) $< $@

$(TARGET)@EXEEXT@: main.@OBJEXT@ hook.dll $(TARGET).res.@OBJEXT@
	$(CC) -o $@ $^ $(LIBS)

dist: clean build
	$(RM) $@
	$(RM) -r $(PACKAGE)
	$(MKDIR) $(PACKAGE)/src
	$(CP) COPYING.txt README.md $(PACKAGE)
	$(CP) *@EXEEXT@ *.dll $(PACKAGE)
	$(CP) *.c *.h *.rc *.def *.ico *.bmp $(PACKAGE)/src
	$(CP) *.mk Makefile.in configure config.h.in $(PACKAGE)/src/
	$(TAR) cz $(PACKAGE) > $(PACKAGE).tar.gz
	test -n "$(ZIP)" && $(ZIP) -r $(PACKAGE).zip $(PACKAGE)

upload: dist
	scp $(PACKAGE).tar.gz zuse:/var/www/misc/@PACKAGE_NAME@-latest.tar.gz
	scp $(PACKAGE).zip zuse:/var/www/misc/@PACKAGE_NAME@-latest.zip

configure: configure.ac
	autoconf

Makefile: Makefile.in configure
	./configure

