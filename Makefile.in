CC=@CC@ -O2 -Wall -mwindows
RC=@RC@
ZIP=@ZIP@
TAR=tar
CP=cp
RM=rm -f
MKDIR=mkdir -p

TARGET=haisyo
LIBS=-luser32 -lgdi32 -lole32 -lshell32 -luuid
PACKAGE=@PACKAGE_NAME@-@PACKAGE_VERSION@
ZIPFILE=$(PACKAGE).zip

.PHONY: all run dist clean upload

all: $(TARGET).exe hook.dll

run: all

dist: clean $(ZIPFILE)

clean:
	$(RM) *.obj *.dll *.res *.RES *.exp *.lib *.log *.zip *.o *.exe
	$(RM) -r @PACKAGE_NAME@

upload: $(ZIPFILE)
	scp $< zuse:/var/www/misc/

c.o:
	$(CC) -c $< -o $@

hook.dll: hook.o
	$(CC) -shared -o $@ $< $(LIBS)

$(TARGET).res.o: $(TARGET).rc
	$(RC) $< $@

$(TARGET).exe: main.o hook.dll $(TARGET).res.o
	$(CC) -o $@ $^ $(LIBS)

$(ZIPFILE): $(TARGET).exe
	$(RM) $@
	$(RM) -r $(PACKAGE)
	$(MKDIR) $(PACKAGE)/src
	$(CP) COPYING.txt README.md $(PACKAGE)
	$(CP) *.exe *.dll $(PACKAGE)
	$(CP) *.c *.h *.rc *.def *.ico *.bmp $(PACKAGE)/src
	$(CP) *.mk Makefile.in configure config.h.in $(PACKAGE)/src/
	$(ZIP) -r $@ $(PACKAGE)
