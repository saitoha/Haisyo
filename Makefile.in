CC=@CC@ -O2 -Wall -mwindows
RC=@RC@
ZIP=@ZIP@
CP=cp
RM=rm -f
MKDIR=mkdir -p

TARGET=haisyo
LIBS=-luser32 -lgdi32 -lole32 -lshell32 -luuid
PACKAGE=@PACKAGE_NAME@-@PACKAGE_VERSION@
ZIPFILE=$(PACKAGE).zip

.PHONY: all build run dist clean upload

all: build

build: $(TARGET)@EXEEXT@ hook.dll

run: build
	cygstart ./$(TARGET)@EXEEXT@

dist: clean $(ZIPFILE)

clean:
	$(RM) *.obj *.dll *.res *.RES *.exp *.lib *.log *.zip *.@OBJEXT@ *@EXEEXT@
	$(RM) -r $(PACKAGE) 

upload: $(ZIPFILE)
	scp $< zuse:/var/www/misc/

c.@OBJEXT@: Makefile 
	$(CC) -c $< -o $@

hook.dll: hook.@OBJEXT@
	$(CC) -shared -o $@ $< $(LIBS)

$(TARGET).res.@OBJEXT@: $(TARGET).rc
	$(RC) $< $@

$(TARGET)@EXEEXT@: main.@OBJEXT@ hook.dll $(TARGET).res.@OBJEXT@
	$(CC) -o $@ $^ $(LIBS)

$(ZIPFILE): build
	$(RM) $@
	$(RM) -r $(PACKAGE)
	$(MKDIR) $(PACKAGE)/src
	$(CP) COPYING.txt README.md $(PACKAGE)
	$(CP) *@EXEEXT@ *.dll $(PACKAGE)
	$(CP) *.c *.h *.rc *.def *.ico *.bmp $(PACKAGE)/src
	$(CP) *.mk Makefile.in configure config.h.in $(PACKAGE)/src/
	$(ZIP) -r $@ $(PACKAGE)

configure: configure.ac
	autoconf

Makefile: Makefile.in configure
	./configure

